<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="match_parent_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_parent_layout_with_margin" parent="match_parent_layout">
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="wrap_content_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="title_text" parent="wrap_content_layout">
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:textColor">@color/whitesmoke</item>
        <item name="android:textSize">@dimen/title_text_size</item>

    </style>

    <style name="large_text" parent="wrap_content_layout">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="medium_text" parent="wrap_content_layout">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="small_text" parent="wrap_content_layout">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

</resources>