<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Layout Parameter-->
    <style name="wrap_content_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_parent_layout">
        <item name="android:layout_width">match_parent
        </item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--Text-->
    <style name="headline_text_while" parent="wrap_content_layout">
        <item name="android:textSize">@dimen/headline</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="headline_text_black" parent="wrap_content_layout">
        <item name="android:textSize">@dimen/headline</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title_text_while" parent="wrap_content_layout">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_text_black" parent="wrap_content_layout">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="body_text_gray" parent="wrap_content_layout">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="bottom_bar_text" parent="wrap_content_layout">
        <item name="android:textSize">@dimen/button</item>
        <item name="android:textColor">@drawable/bottom_bar_text</item>
    </style>

    <!--List View-->
    <style name="basic_list_view_style" parent="match_parent_layout">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/list_view_divider_height</item>
    </style>
</resources>